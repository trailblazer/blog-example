.container-fluid
  .row
    - posts.each do |post|
      %div.post_preview
        .col-sm
          %h1
            = post.title
        .col-md-12
          %p
            = post.description
          %p
            Author:
            = post.user&.email
        .col-sm-6
          = fa_icon "comments", text: post.comments.size
        .col-sm-6
          -if post.submitted?
            =link_to "Approve/Decline/Suggest", new_moderator_blog_post_approval_path(post.id)
          -elsif post.declined?
            Declinded
          -else
            Approved
