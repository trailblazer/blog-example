.row
  .col-sm-9
    %h1 Edit
.row
  .col-sm-4
    = form_with model: @form do |f|
      %div.form-group
        = f.label :title
        = f.text_field :title,  class: "form-control", id: "title"
      %div.form-group
        = f.label :description
        = f.text_field :description,  class: "form-control", id: "description"
      %div.form-group
        = f.label :content
        = f.text_area :content, size: "60x12",  class: "form-control", id: "content"
      %div.form-group
        =submit_tag 'Submit', class: 'btn btn-primary mb-2'
